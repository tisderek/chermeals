<!DOCTYPE html>
<html>
  <head>
    <title>chermeals</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui fixed inverted menu">
      <div class="ui container">
        <%= link_to root_path, {class: 'header item'} do %>
          <%= image_tag "gloves.png", class: 'logo' %>
          <span class="cm-typed-logo"> <span>cher</span>meals</span>
        <% end %>
        <div class="right menu">
          <% if member_signed_in? %>
            <%= link_to new_meal_path, {class: 'item'} do %>
              <%= semantic_icon("add circle") %> Add a meal
            <% end %>
            <%= link_to 'Logout', destroy_member_session_path, :method => :delete, :class => 'item' %>
          <% else %>
            <%= link_to 'Login', new_member_session_path, :class => 'item' %>
          <% end %>
         </div>
      </div>
    </div>
    <div class="ui main container">
     <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
