<div class="ui middle aligned center aligned grid">
  <div class="column cm-singup-column">
    <h2 class="ui header">
      <div class="content">
        Sign up
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui large form"}) do |f| %>
      <div class="ui stacked segment">

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name, autofocus: true, placeholder:'Name' %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="at icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder:'Email' %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="key icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder:"Password (min #{@minimum_password_length} chars)"%>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="key icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password confirmation"%>
          </div>
        </div>

        <%= f.submit "Let's do this!", :class => 'ui fluid large blue submit button'  %>
      </div>

      <div class="ui error message"><%= devise_error_messages! %></div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>